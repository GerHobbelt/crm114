isolate (:patterns:)
input (:patterns:) 
isolate (:p:) /bleah/
{
	window <eofaccepts> (:p:) (:patterns:) /.*/ /:*:_nl:/ 
	match  (:z: :pa:) [:p:] /(.+)./
	output /:*:pa:/
	{
	    {
		{
			match (:out:) [:words:] /:*:pa:/
			output / ---> :*:out:/
		}
		alius
		{
			output / <no match> /
		}
     	    }
	    trap (:zeta:) /.*/
