#! @BIN_PATH@/crm114
#
# can we set a variable in EVAL and conditionally evaluate at the same time and jump accordingly?
{
	{
		window 
		isolate (:a:) //
		eval (:a:) /:@: 2 > 1:/
		output /ouch!\n/
		output /a = ':*:a:'\n/
	}
	alius
	{
		output /yo!\n/
		output /a = ':*:a:'\n/
	}
	trap (:r:) //
	{
		output /TRAP::*:r:\n/
	}
}


